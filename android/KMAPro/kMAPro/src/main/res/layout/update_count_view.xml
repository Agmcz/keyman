<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right"
  >
  <RelativeLayout
    android:id="@+id/update_count_indicator_icon_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
   <ImageView
      android:id="@+id/counterBackground"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     android:layout_marginRight="@dimen/update_indicator_bg_margin"
     android:background="@drawable/ic_cloud_download"/>
  </RelativeLayout>
  <TextView
    android:id="@+id/update_count_indicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/update_count_indicator_icon_bg"
    android:width="@dimen/update_indicator_size"
    android:height="@dimen/update_indicator_size"
    android:background="@drawable/shape_update_count"
    android:text=""
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:textSize="9sp" />


</RelativeLayout>
